<%= render "layouts/navbar" %>

<h1>Groups</h1>

<div>Need to get some comestibles?  Choose who you're shopping for and let's get some vitties!</div>

<br />

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.owner_id %></td>
        <td><%= link_to group.name, group_carts_path(group_id: group.id) %></td>
        <td><%= link_to 'Show Members', group %></td>
        <td><%= link_to 'Edit Name', edit_group_path(group) %></td>
        <td><%= link_to 'Delete Group', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

