<p id="notice"><%= notice %></p>
<h1>Choose a Product to Add to the Cart </h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% for product in @category.products %>
      <tr>
        <td><%= link_to product.name, product_path(product) %></td>
        <td>
	        <%= form_tag(line_items_path, :method => "post") do %>
			    <%= hidden_field_tag(:product_id, product.id) %>
          <%= hidden_field_tag(:cart_id, params[:cart_id] ) %>

			  <%= submit_tag("Add to Cart") %>
			<% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to "Can't find the product you want to add?", products_path, :class => 'btn btn-primary' %>
